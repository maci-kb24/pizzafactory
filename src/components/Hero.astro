---
const {
  title,
  backgroundImage,
  subtitle
} = Astro.props
---

<section
  class="hero"
  style={`background-image: url(${backgroundImage});`}
>
  <div class="hero__overlay" />
  <div class="hero__content">
    {subtitle && <h2 class="hero__subtitle">{subtitle}</h2>}
    <h1 class="hero__title">{title}</h1>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.4);
  }

  .hero__content {
    color: white;
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .hero__title {
    font-size: 110px;
    margin-bottom: 1rem;
    text-transform: uppercase;
    padding: 0 4rem;
  }
  @media screen and (max-width: 768px) {
    .hero__title {
      font-size: 35px;
      padding: 0 1rem;
    }
  }
</style>
