    .footer-bg {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -2;
    }

    .overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.75);
      z-index: 0;
    }

    .container {
      position: relative;
      z-index: 1;
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 1rem;
    }

    /* Top layout */
    .top {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
      text-align: center;
    }

    .column h4 {
      font-size: 1.1rem;
      margin-bottom: 1.25rem;
      letter-spacing: 1px;
      text-transform: uppercase;
    }

    .column p,
    address {
      color: #ccc;
      line-height: 1.8;
      font-style: normal;
    }

    /* Logo */
    .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .logo .text {
      font-family: cursive;
    }

    /* Social */
    .social {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-top: 1rem;
    }

    .social a {
      width: 40px;
      height: 40px;
      border: 1px solid #fff;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      color: #fff;
      transition: background 0.3s;
    }

    .social a:hover {
      background: #B1C3B8;
      color: #000;
      border-color: #B1C3B8;
    }

    /* Divider */
    hr {
      border: none;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      margin: 3rem 0 2rem;
    }

    /* Bottom */
    .bottom {
      text-align: center;
    }

    nav {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-bottom: 1rem;
      flex-wrap: wrap;
    }

    nav a {
      color: #fff;
      text-decoration: none;
      font-size: 0.9rem;
    }

    nav a:hover {
      color: #B1C3B8;
    }

    .bottom p {
      font-size: 0.85rem;
      color: #aaa;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .top {
        grid-template-columns: 1fr;
      }
    }
  </style>