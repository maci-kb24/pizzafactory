---
const { items = [] } = Astro.props;
import { Image } from 'astro:assets';
---

<section class="menu-highlights">
  <div class="menu-grid">
    {
      items.map(
        (item: {
          name: string;
          description: string;
          price: string | number;
          image: string;
        }) => (
          <article class="menu-item">
            <div
              class="bg-img"
              
            >
              <Image src={item.image} alt={item.name} width={350} height={300} />
            </div>
            <div class="menu-content">
              <h3 class="menu-title">{item.name}</h3>
              <p class="menu-description">{item.description}</p>
              <strong class="menu-price">{item.price} МКД</strong>
            </div>
          </article>
        )
      )
    }
  </div>
  <div class="cta-link">
    <a href="/menu">Види Мени</a>
  </div>
</section>

<style>
  .menu-highlights {
    padding: 2rem 0;
  }
  .menu-grid {
    margin: 2rem 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    color: #fff;
  }
  @media screen and (max-width: 768px) {
    .menu-grid {
      grid-template-columns: 1fr;
    }
    
  }

  .menu-item {
    display: flex;
    background: rgba(0, 0, 0, 0.2);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }
  @media screen and (max-width: 768px) {
    .menu-item {
      flex-direction: column;
    }
  }
  .menu-item .bg-img {
    flex: 1;
    overflow: hidden;
    flex-shrink: 0;
  }
  .menu-item .bg-img img {
    object-fit: scale-down;
    display: block;
    width: 100%;
    height: 100%;
  }
  .menu-item .menu-content {
    flex: 1;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.2);
  }
  .menu-title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }
  .menu-description {
    font-size: 1rem;
    margin-bottom: 1rem;
    color:gray;
  }
  .menu-price {
    font-size: 1.1rem;
    color: #B1C3B8;
  }
  .cta-link {
    text-align: center;
    margin-top: 1rem;
  }
  .cta-link a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #B1C3B8;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s ease;
  }
  .cta-link a:hover {
    background: #94A89F;
  }
</style>
