---
const {
  name,
  ingredients,
  price,
  currency
} = Astro.props
---

<li class="menu-item">
  <div class="menu-item__row">
    <h3 class="menu-item__name">{name}</h3>
    <span class="menu-item__price">{price} {currency}</span>
  </div>

  {ingredients && (
    <p class="menu-item__ingredients">
      {ingredients}
    </p>
  )}
</li>

<style>
  .menu-item {
    padding: 0.75rem 0;
    border-bottom: 1px dashed #e5e5e5;
  }

  .menu-item__row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .menu-item__name {
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
  }

  .menu-item__price {
    font-weight: 600;
    white-space: nowrap;
  }

  .menu-item__description {
    margin: 0.25rem 0 0;
    font-size: 0.875rem;
    color: #666;
  }
</style>
