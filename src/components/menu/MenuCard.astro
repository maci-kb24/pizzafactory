---
import { Image } from "astro:assets";
const { item } = Astro.props;
const price = item.price || 0;
---

<article class="menu-card">
  <div class="content">
    <h3>{item.name}</h3>
    <span class="price">{price} {item.currency}</span>
  </div>
  <div class="ingredients">
    {item.ingredients && <p>{item.ingredients}</p>}
  </div>
</article>

<style>
  .menu-card {
    display: flex;
    flex-direction: column;
    /* background: #111; */
    color: #fff;
    /* min-height: 280px; */
  }

  .menu-card.reverse {
    /* direction: rtl; */
  }

  .menu-card.reverse > * {
    /* direction: ltr; */
  }

  .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .menu-card .content {
    /* padding: 1.5rem; */
    display: flex;
    justify-content: space-between;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  p {
    color: gray;
    line-height: 1.6;
  }

  .footer {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .price {
    color: #B1C3B9;
    font-weight: 600;
    font-size: 1.1rem;
  }
</style>
