---
const { item } = Astro.props
const price = item.price || 0
---

<article class="menu-card">
  {item.image && (
    <div class="image">
      <img src={item.image} alt={item.name} width="50px" height="50px" />
    </div>
  )}

  <div class="content">
    <h3>{item.name}</h3>
    {item.ingredients && <p>{item.ingredients}</p>}

    <div class="footer">
      <span class="price">{price} {item.currency}</span>
      <button>Order</button>
    </div>
  </div>

  <style>
    .menu-card {
      display: grid;
      grid-template-columns: 1fr 1fr;
      background: #111;
      color: #fff;
      /* min-height: 280px; */
    }

    .menu-card.reverse {
      /* direction: rtl; */
    }

    .menu-card.reverse > * {
      /* direction: ltr; */
    }

    .image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .content {
      padding: 2.5rem;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    p {
      color: #ccc;
      line-height: 1.6;
    }

    .footer {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .price {
      color: #f5c16c;
      font-weight: 600;
      font-size: 1.1rem;
    }

    button {
      background: transparent;
      color: #fff;
      border: 1px solid #fff;
      padding: 0.5rem 1.25rem;
      cursor: pointer;
    }
  </style>
</article>
