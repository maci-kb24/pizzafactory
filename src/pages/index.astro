---
import Hero from "../components/Hero.astro";
import HomeIntro from "../components/HomeIntro.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import MenuHighlights from "../components/MenuHighlights.astro";
import OpeningHours from "../components/OpeningHours.astro";
import CTA from "../components/CTA.astro";
import pizzafactorypizza from "../assets/images/pizzafactorypizza.jpg";
import makedonska from "../assets/images/makedonska.jpg";
import meksikana from "../assets/images/meksikana.jpg";
import formaggi from "../assets/images/4formaggi.jpg";
import margarita from "../assets/images/margarita.jpg";
import capricciosa from "../assets/images/capricciosa.jpg";
import homeintroimg from "../assets/images/left-image-home.webp";
import homeBg from "../assets/images/bg-cover.jpg";
import "../styles/global.css";

const { pageTitle } = Astro.props;
---

<BaseLayout pageTitle={pageTitle}>
